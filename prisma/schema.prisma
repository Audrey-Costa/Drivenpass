// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users{
  id           Int @id @default(autoincrement())
  email        String @unique
  password     String
  credentials  Credentials[]
  secretNotes  SecretNotes[]
  cards        Cards[]
}

model Credentials{
  id           Int @id @default(autoincrement())
  url          String
  username     String
  password     String
  title        String
  users        Users @relation(fields: [userId], references: [id])
  userId       Int

  @@unique([title, userId], name: "credentialTitle")
}

model SecretNotes{
  id           Int @id @default(autoincrement())
  title        String
  note         String
  users        Users @relation(fields: [userId], references: [id])
  userId       Int

  @@unique([title, userId], name: "noteTitle")
}

model Cards{
  id           Int @id @default(autoincrement())
  cardNumber   String
  name         String
  securityCode String
  password     String
  expiresAt    DateTime
  isVirtual    Boolean @default(false)
  type         Type
  title        String
  users        Users @relation(fields: [userId], references: [id])
  userId       Int

  @@unique([title, userId], name: "noteTitle")
}

enum Type{
  credit
  debit
  both
}